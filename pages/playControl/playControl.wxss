.play-control-tabs {
  background-color: #666666;
}
.play-control-tabs .van-tab {
  color: #cccccc;
}
.play-control-tabs .van-tab--active {
  color: white;
}
.play-control, .lyric-list {
  height: calc(100vh - 44px);
  background-color: #666666;
}
.play-control {
  color: white;
  position: relative;
}
.play-control .music-pic-image {
  height: calc(100vw - 36px);
  padding: 0 24px;
  padding-top: 12px;
  box-sizing: border-box;
}
.play-control .music-pic-image image {
  width: 100%;
  height: 100%;
}
.play-control .music-info {
  padding: 12px 24px;
}
.play-control .music-info text:first-child {
  font-size: 28px;
}
.play-control .music-info text:last-child {
  margin-top: 4px;
  font-size: 14px;
}
.play-control .music-info text {
  display: block;
}
.play-control .current-time {
  padding: 0 8px;
}
.play-control .current-time text, .play-control .current-time van-slider {
  display: inline-block;
  vertical-align: middle;
}
.play-control .current-time text {
  width: 72px;
  text-align: center;
}
.play-control .current-time van-slider {
  width: calc(100% - 144px);
}
.play-control .control-button-group {
  width: 100%;
  font-size: 48px;
  text-align: center;
  position: absolute;
  bottom: 48px;
}
.play-control .control-button-group .play-pause {
  font-size: 64px;
}
.play-control .control-button-group van-icon {
  margin: 0 32px;
  vertical-align: middle;
}
.lyric-list {
  color: white;
  text-align: center;
}