<view>
  <view class="play-bar">
    <view class="album-image">
    </view>
    <view class="music-info">
      <van-slider
        use-button-slot
        bar-height="4px"
        active-color="#00B26A"
        value="{{ currentValue }}"
      />
      <view class="music-info-name">
        <text>{{ currentTime || '00:00' }}/{{ duration || '00:00' }}</text>
        <text>{{ ar }} - {{ name }}</text>
      </view>
    </view>
    <view class="play-control">
      <van-icon
        name="{{ playState === 'playing' ? 'pause-circle-o' : 'play-circle-o' }}"
        bind:click="toggleState"
      />
    </view>
  </view>
  <van-tabbar
    placeholder
    active="{{ active }}"
    bind:change="onChange"
  >
    <van-tabbar-item
      wx:for="{{ list }}"
      wx:key="index"
      icon="{{ item.icon }}"
    >
      {{ item.text }}
    </van-tabbar-item>
  </van-tabbar>
</view>
